
//exercice Fizz Buzz

public class FizzBuzz
{
    public static void Main(string[] args)
    {
        Console.Write("Ask the user for a number between 1 and 100: ");
        string input = Console.ReadLine();
        int n;

        while (!int.TryParse(input, out n) || n < 1 || n > 100)
        {
            Console.Write("Invalid input. Enter an integer between 1 and 100: ");
            input = Console.ReadLine();
        }

        bool multipleOf3 = (n % 3 == 0);
        bool multipleOf5 = (n % 5 == 0);

        if (multipleOf3 && multipleOf5)
        {
            Console.WriteLine("FizzBuzz");
        }
        else if (multipleOf3)
        {
            Console.WriteLine("Fizz");
        }
        else if (multipleOf5)
        {
            Console.WriteLine("Buzz");
        }
        else
        {
            Console.WriteLine(n);
        }
    }
}

//exercice Triangle 

public class Triangle
{

   public static void Main(string[] args)
    {
        int height = 5;
        for (int i = 1; i <= height; i++)
        {
            for (int j = 1; j <= i; j++)
            {
                Console.Write("*");
            }
            Console.WriteLine();
        }
    }

}

//exercice reverse a word

public class ReverseWord
{
   public static void Main(string[] args)
    {
        Console.Write("give me a word : ");
        string input = Console.ReadLine() ?? "";
        string reversed = "";
        for (int i = input.Length - 1; i >= 0; i--)
        {
            reversed += input[i];
        }
        Console.WriteLine(reversed);
    }
}

